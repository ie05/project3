<h1>{{title}}</h1>
<h4>{{description}}</h4>
<div id="accordion">
	<h5>Recent Tweets</h5>
	<div class="tweet-stream">	
		<a class="twitter-timeline" data-tweet-limit="5" href="https://twitter.com/JackRoboBurton">Tweets by TwitterDev</a> <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
	</div>

	<h5>Liked Tweets</h5>
	<div class="tweet-stream">
		<a class="twitter-timeline" href="https://twitter.com/JackRoboBurton/likes">Tweets Liked by @JackRoboBurton</a> <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
	</div>

	<h5>View All Tweets</h5>
	<div>
		<ul class="statuses">
		{{# each statuses}}
			<li>{{this.text}}
			<form style="display:inline;" action="/delete" method="POST">
	          <input name="id" type="hidden" value="{{this.id}}">
	          <input class="delete" name="delete" type="submit" value="Delete">
	        </form>
			</li>
		{{/each}}
		</ul>
		<script id="status-template" type="text/javascript">
		  <li>{{this.text}}
			<form style="display:inline;" action="/delete" method="POST">
	          <input name="id" type="hidden" value="{{this.id}}">
	          <input class="delete" name="delete" type="submit" value="Delete">
	        </form>
		  </li>
		</script>

		
	</div>


</div>
<div style="width:900px;">
<p>{{text}}</p>
<p>{{test_var}}</p>
<p>{{data}}</p>
</div>
<script src="/javascripts/accordion-body.js" type="text/javascript"></script>