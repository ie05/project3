<h1>{{title}}</h1>
<h4>{{description}}</h4>
<div id="accordion">
	<h5>Recent Tweets</h5>
	<div class="tweet-stream">	
		<a class="twitter-timeline" data-tweet-limit="5" href="https://twitter.com/JackRoboBurton">Tweets by TwitterDev</a> <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
	</div>

	<h5>Liked Tweets</h5>
	<div class="tweet-stream">
		<a class="twitter-timeline" href="https://twitter.com/JackRoboBurton/likes">Tweets Liked by @JackRoboBurton</a> <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
	</div>

	<h5>Admin</h5>
	<div id="accordion2">
		<h5>Delete</h5>
		<div>
			<ul class="statuses">
			{{# each statuses}}
				<li id="{{this.id}}"><label>{{this.text}}</label>
					<form style="display:inline;">
			          <button class="delete" name="id" type="submit" value="{{this.id}}">Delete</button>
			        </form>
				</li>
			{{/each}}
			</ul>
		</div>
		<h5>Create</h5>
		<div class="add">
			<form style="display:inline;">
			  <label>Write Tweet</label><br>
			  <input type="text" name="tweet" value="" />
	          <button id="add" class="add" type="submit" value="tweet">Tweet</button>
	        </form>
		</div>
	</div>

</div>
<div style="width:900px;">
<p>{{text}}</p>
<p>{{test_var}}</p>
<p>{{data}}</p>
</div>
<script src="/javascripts/accordion-body.js" type="text/javascript"></script>